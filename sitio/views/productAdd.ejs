<!DOCTYPE html>
<html lang="es">

<%-include('./partials/head') %>

    <body>
        <!-- encabezado -->
        <%-include('./admin/partials/header') %>
            <main class="charge">
                <div class="container">
                    <div class="card border rounded shadow my-5 col-md-8 col-lg-10 mx-auto p-5">
                        <div class="row">
                            <form action="" class="formulario" enctype="multipart/form-data" method="POST">
                                <label for="" class="btn-fotos"> <input type="file" name="imagen" id="imagen" class="examinar"
                                        multiple>Agregar fotos</label>
                                        <p><%= locals.errores && errores.imagen ? errores.imagen.msg : null %> </p>
                                <div class="ctrl-input">
                                    <label for="titulo" class="items-label">Título</label>
                                    <input type="text" name="title" class="items-input"title="El producto debe contener un titulo"required
                                    pattern="^[A-Za-zñÑÁáÉéíÍÓóÚúÜü\s]{3,20}$" id="title" value="<%= locals.old && old.title ? old.title : null %>">
                                </div>
                                <p><%= locals.errores && errores.title ? errores.title.msg : null %> </p>
                                <div class="ctrl-input">
                                    <label for="precio" class="items-label">Precio</label>
                                    <input type="text" name="price" title="El producto debe contener un precio"required
                                    pattern="^[0-9]{1,6}(,[0-9]{2})?$" class="items-input" id="price" value="<%= locals.old && old.price ? old.price : null %>">
                                </div>
                                <p><%= locals.errores && errores.price ? errores.price.msg : null %> </p>
                                <div class="ctrl-input">
                                    <label for="descripcion" class="items-label">Descripción</label>
                                    <textarea name="description" title="El producto debe contener una descripcion"required
                                    data-pattern="^.{2,255}$" class="items-textarea" id="description" value="<%= locals.old && old.description ? old.description : null %>"></textarea>
                                </div>
                                <p><%= locals.errores && errores.description ? errores.description.msg : null %> </p>
                     

                                <div class="ctrl-input">
                                    <label for="category" class="items-label">Categoría</label>
                                    <select name="categoryId" class="category" title="El producto debe contener una categoria"required
                                    pattern="^[0-9]{1,3}$" id="categoryId" value="categoryId">
                                        <option value="" hidden selected>Seleccione la categoría</option>
                                        <% categorias.forEach(categoria=> { %>
                                            <option value="<%= categoria.id%>"<%= locals.old && old.categoryId === categoria.id ? 'selected' : null%>>
                                                <%= categoria.name %>
                                            </option>
                                            <% }) %>
                                            <span class="text-danger small"><%= locals.errores && locals.errores.categoryId ? errores.categoryId.msg : null %> </span>
                                    </select>
                                </div>
                               
                                <div class="ctrl-input">
                                    <button type="submit" class="items-button">Cargar producto</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </main>
            <script src="/javascripts/productAdd.js"type="module"></script>
    </body>

</html>