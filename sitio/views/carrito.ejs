<!DOCTYPE html>
<html lang="es">

<%-include('./partials/head') %>

    <body class="carrito">
        <%-include('./partials/header') %>

            <!-- main -->

            <main class="detail">
                <div class="container">

                    <div class="card border rounded shadow my-5">
                        <h2>Carrito de compras</h2>
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <% productos.forEach(producto=> { %>
                                    <section class="row p-4">
                                        <div class="col-6 col-lg-8"><img class="img-fluid"
                                                src="/images/productos/<%= producto.images %>" alt=""></div>
                                        <div class="col-6 col-lg-4">
                                            <h4 class="price">$ <%= producto.price.toFixed(2) %>
                                            </h4>
                                            <div class="botones mt-4">
                                                <a class="btn btn-sm btn-secondary" href=""><i
                                                        class="fas fa-plus"></i></a>
                                                <input type="text">
                                                <a class="btn btn-sm btn-secondary" href=""><i
                                                        class="fas fa-minus"></i></a>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <h5>
                                                <%= producto.title %>
                                            </h5>
                                            <p>
                                                <%= producto.description %>
                                            </p>
                                        </div>
                                        <hr>
                                    </section>
                                    <% }) %>
                            </div>
                            <div class="col-12 col-lg-4">
                                <h3>Resumen</h3>
                                <section class="row p-4">
                                    <div class="d-flex justify-content-around">
                                        <ul class="items">
                                            <li>Subtotal</li>
                                            <li>Envíos</li>
                                            <li>Total</li>
                                        </ul>
                                        <ul class="valores text-end">
                                            <li>$ 1000,00</li>
                                            <li>$ 500,00</li>
                                            <li>$ 1500,00</li>
                                        </ul>
                                    </div>
                                    <h4 class="mt-3">Ingresa tu cupón de descuento</h4>
                                    <form class="form-search">
                                        <input type="text" class="form-control" />
                                    </form>
                                    <button class="btn btn-primary mt-5" type="submit">Finalizar compra</button>
                                    <div class="mt-5">
                                        <h4>Medios de pago</h4>
                                        <ul class="pago p-0 mt-3">
                                            <li><i class="fab fa-cc-visa"></i></li>
                                            <li><i class="fab fa-cc-mastercard"></i></li>
                                            <li><i class="fas fa-university"></i></li>
                                            <li><i class="far fa-money-bill-alt"></i></li>
                                        </ul>
                                    </div>
                                </section>

                            </div>
                        </div>


                    </div>
                </div>
            </main>
            <!-- Pie de la página -->
            <%-include('./partials/footer') %>
                <%-include('./partials/scripts') %>
    </body>

</html>