<!DOCTYPE html>
<html lang="es">

  <%-include('./partials/head') %>

<body>
    <!-- encabezado -->
    <%-include('./partials/header') %>

    <!-- main -->

    <main class="detail">
        <div class="container">

            <div class="card border rounded shadow my-5">
                <h2><%= producto.name %> </h2>
                <div class="contenido">
                  <section class="fotos">
                    <div class="maxi">
                        <img  id='img-principal' class="img-fluid" src="/images/productos/<%= producto.images[0].file %>" class="w-100"alt="" >
                    </div>
                
                    <div class="mini">

                        <i class="fas fa-chevron-up"></i>
                        <% producto.images.forEach(image => { %>
                            <img onclick="document.getElementById('img-principal').setAttribute('src','/images/productos/<%=image.file%>')" src="/images/productos/<%= image.file %>" alt="">
                        <% }) %>

                        
                        <!-- <i class="fas fa-chevron-right"></i>
                        <i class="fas fa-chevron-down"></i> -->
                    </div>
                </section>
                <section class="info">
                    <h3>$ <%= producto.price %> </h3>
                    <p class="mt-3"><%= producto.description %></p>
                    <div class="botones mt-4">
                        <a href="" class="btn btn-primary">Agregar al carrito</a>
                        <a href="" class="btn btn-primary">Comprar</a>
                    </div>
                    <div class="mt-5">
                        <h4>Medios de pago</h4>
                        <ul class="pago">
                            <li><i class="fab fa-cc-visa"></i></li>
                            <li><i class="fab fa-cc-mastercard"></i></li>
                            <li><i class="fas fa-university"></i></li>
                            <li><i class="far fa-money-bill-alt"></i></li>
                        </ul>
                    </div>
                </section>
                </div>
                
            </div>
        </div>
    </main>

  <!-- Pie de la pÃ¡gina -->
  <%-include('./partials/footer') %>

   <!-- scripts -->
  <%-include('./partials/scripts') %>

  <script src="/javascripts/productDetail.js"></script>

</body>

</html>